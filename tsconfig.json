{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "lib": ["dom", "es6", "ES2015"],
    "module": "es2015",
    "declaration": false,
    "moduleResolution": "node",
    "target": "es2017",
    "baseUrl": "."
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules"],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
